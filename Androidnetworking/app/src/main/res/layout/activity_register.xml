<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity"
    android:orientation="vertical"
    android:background="#FFFDF9"
    android:padding="20dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:src="@drawable/ong2"
        >

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="Đăng ký"
        android:layout_marginTop="5dp"
        android:textColor="#005e70"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/edtEmailRegister"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:background="#75D5F7FD"
        android:padding="10dp"
        android:drawableLeft="@drawable/png_email"
        android:drawablePadding="10dp"
        android:hint="Email"


        android:textColor="#024B59"
        android:textColorHint="#024B59"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtNameRegister"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:inputType="textPassword"
        android:textColorHint="#024B59"
        android:drawableLeft="@drawable/png_name"
        android:textColor="#024B59"
        android:drawablePadding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="#75D5F7FD"
        android:padding="10dp"

        android:hint="Tên tài khoản"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtPassWordRes"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:inputType="textPassword"
        android:textColorHint="#024B59"
        android:drawableLeft="@drawable/png_pass"
        android:textColor="#024B59"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/hint"
        android:layout_marginTop="7dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="#75D5F7FD"
        android:padding="10dp"
        android:hint="Mật khẩu"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtRePassWordRes"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/png_pass"
        android:textColorHint="#024B59"
        android:drawablePadding="10dp"
        android:textColor="#024B59"
        android:drawableRight="@drawable/hint"
        android:layout_marginTop="7dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="#75D5F7FD"
        android:padding="10dp"
        android:hint="Xác nhận mật khẩu"
        android:textSize="20dp" />




    <Button

        android:id="@+id/btnRegister"

        android:text="Tạo tài khoản"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:onClick="onRegisterSubmit"
        android:backgroundTint="#005e70"

        android:textColor="@color/white"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        >


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn đã có tài khoản"
            android:layout_marginLeft="55dp"
            android:textStyle="bold"
            android:textColor="#024B59"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.609"
            tools:layout_editor_absoluteX="45dp" />

        <Button
            android:id="@+id/btnRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#005e70"
            android:onClick="onLoadLoginScreen"
            android:text="Đăng nhập"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.887"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>